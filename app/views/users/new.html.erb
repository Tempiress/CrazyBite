<div class="container">
<h2 class="title"> Присоединяйся и спрашивай!</h2>

  <div class="mt">

    <%= form_with model: @user do |form| %>
      <p><%= form.label :name, "Имя", class: 'title-sm'%></p>
      <p><%= form.text_field :name, class: 'btn_edit_q' %></p>

      <p class="mt"><%= form.label :nickname, "Ник", class: 'title-sm'%></p>
      <p><%= form.text_field :nickname, class: 'btn_edit_q' %></p>

      <p class="mt"><%= form.label :email, "email", class: 'title-sm'%></p>
      <p><%= form.text_field :email, class: ' btn_edit_q' %></p>

      <p class="mt"><%= form.label :password, "password", class: 'title-sm'%></p>
      <p><%= form.password_field :password, class: ' btn_edit_q' %></p>



      <p class="mt-lg"><%= form.submit 'Зарегистрироваться', class: 'BtnQ ' %></p>
      <% end %>
  </div>


</div>